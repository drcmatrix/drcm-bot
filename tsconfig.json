{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES2020",
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
